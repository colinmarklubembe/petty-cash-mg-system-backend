datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                  String    @id @default(auto()) @map("_id") @db.ObjectId
  email               String    @unique
  password            String
  firstName           String
  middleName          String?
  lastName            String
  isVerified          Boolean   @default(false)
  verificationToken   String?
  forgotPasswordToken String?
  isActivated         Boolean   @default(false)
  role                Role      @default(EMPLOYEE)
  createdAt           DateTime?
  updatedAt           DateTime?
}

model Requisition {
  id                String            @id @default(auto()) @map("_id") @db.ObjectId
  title             String
  userId            String            @db.ObjectId
  description       String?
  amount            Float
  requisitionStatus RequisitionStatus @default(PENDING)
  createdAt         DateTime?
  updatedAt         DateTime?
}

model PettyCashFund {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  currentBalance Float
  totalSpent     Float
  totalAdded     Float
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  userId         String   @db.ObjectId
}

model Approval {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  status        String
  remarks       String?
  createdAt     DateTime @default(now())
  userId        String   @db.ObjectId
  requisitionId String   @db.ObjectId
}

model Transaction {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  amount          Float
  type            String // e.g., "disbursement" or "replenishment"
  createdAt       DateTime @default(now())
  userId          String   @db.ObjectId
  pettyCashFundId String   @db.ObjectId
}

enum RequisitionStatus {
  PENDING
  APPROVED
  REJECTED
}

enum Role {
  EMPLOYEE
  FINANCE
  ADMIN
}
